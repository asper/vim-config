" Indentation
    set softtabstop=4  " tab = 4 space
    set tabstop=4
    set shiftwidth=4
    set expandtab      " no more tabs, only spaces!
    set autoindent
    set fileformat=unix
    set textwidth=79

" Editor
    set list
    set listchars=trail:¤,tab:>-,nbsp:•     " Show blank spaces and tabs at the end of a line

let python_highlight_all=1
